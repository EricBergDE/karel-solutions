void addFast()
{
    repeat(8){
        if(onBeeper() && beeperAhead()){
            moveForward();
            if(beeperAhead()){
                carryTwo();
            }
            else{
                carryOne();
            }
        }
        else if(onBeeper() || beeperAhead()){
            moveForward();
            if(beeperAhead()){
                carryOne();
            }
            else{
                writeDown();
            }
        }
        else{
            moveForward();
            if(beeperAhead()){
                writeDown();
            }
            else{
                carryZero();
            }
        }
    }
}

void carryZero()

{
    repeat(2){
        moveForward();
    }
    turnRight();
    moveForward();
    turnRight();
    moveForward();
    bonk();
    turnAround();    
}

void writeDown()
{
    moveForward();
    moveForward();
    dropBeeper();
    turnRight();
    moveForward();
    turnRight();
    moveForward();
    bonk();
    turnAround();
}

void carryOne()
{
    moveForward();
    moveForward();
    turnRight();
    moveForward();
    turnRight();
    moveForward();
    dropBeeper();
    bonk();
    turnAround();
}

void carryTwo()
{
    moveForward();
    moveForward();
    dropBeeper();
    turnRight();
    moveForward();
    turnRight();
    moveForward();
    dropBeeper();
    bonk();
    turnAround();
    
    



} 

void bonk()

{

    while(frontIsClear()){

        moveForward();

    }

}



